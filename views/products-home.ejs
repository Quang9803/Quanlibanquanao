<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Trang chủ</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .banner img { width: 100%; height: auto; display: none; }
    .banner img.active { display: block; }
    .products-grid { display: flex; flex-wrap: wrap; gap: 20px; justify-content: center; margin-top: 40px; }
    .product-card { width: 22%; border: 1px solid #e2e2e2; padding: 10px; text-align: center; border-radius: 6px; }
    .product-card img { width: 100%; height: 200px; object-fit: cover; }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <!-- Banner -->
  <div class="banner">
    <img src="/images/banner1.jpg" class="active">
    <img src="/images/banner2.jpg">
  </div>

  <!-- Script chuyển banner tự động -->
  <script>
    let index = 0;
    const slides = document.querySelectorAll('.banner img');
    setInterval(() => {
      slides[index].classList.remove('active');
      index = (index + 1) % slides.length;
      slides[index].classList.add('active');
    }, 3000);
  </script>

  <!-- Sản phẩm mới -->
<h2 style="text-align:center; margin-top: 40px;">
  <a href="/products/category/<%= encodeURIComponent('Sản phẩm mới') %>" style="text-decoration: none; color: black;">Sản phẩm mới</a>
</h2>


  <div class="products-grid">
  <% featuredProducts.forEach(product => { %>
    <div class="product-card">
      <a href="/products/<%= product.id %>">
        <img src="<%= product.image || '/images/default.jpg' %>" alt="<%= product.name %>">
        <h3><%= product.name %></h3>
        <p><%= product.price.toLocaleString() %> VNĐ</p>
      </a>
    </div>
  <% }) %>
</div>
  <!--sản phẩm cho nam-->
  <h2 style="text-align:center; margin-top: 40px;">
  <a href="/products/category/Nam" style="text-decoration: none; color: black;">Sản phẩm cho nam</a>
  </h2>
<div class="products-grid">
  <% maleProducts.forEach(product => { %>
    <div class="product-card">
      <a href="/products/<%= product.id %>">
        <img src="<%= product.image || '/images/default.jpg' %>" alt="<%= product.name %>">
        <h3><%= product.name %></h3>
        <p><%= product.price.toLocaleString() %> VNĐ</p>
      </a>
    </div>
  <% }) %>
</div>
<!--Sản phẩm cho nữ-->
<h2 style="text-align:center; margin-top: 40px;">
  <a href="/products/category/Nữ" style="text-decoration: none; color: black;">Sản phẩm cho nữ</a>
</h2>
<div class="products-grid">
  <% femaleProducts.forEach(product => { %>
    <div class="product-card">
      <a href="/products/<%= product.id %>">
        <img src="<%= product.image || '/images/default.jpg' %>" alt="<%= product.name %>">
        <h3><%= product.name %></h3>
        <p><%= product.price.toLocaleString() %> VNĐ</p>
      </a>
    </div>
  <% }) %>
</div>
<!--Sản phẩm trẻ em-->
<h2 style="text-align:center; margin-top: 40px;">
  <a href="/products/category/Trẻ em" style="text-decoration: none; color: black;">Sản phẩm cho trẻ em</a>
</h2>
<div class="products-grid">
  <% kidsProducts.forEach(product => { %>
    <div class="product-card">
      <a href="/products/<%= product.id %>">
        <img src="<%= product.image || '/images/default.jpg' %>" alt="<%= product.name %>">
        <h3><%= product.name %></h3>
        <p><%= product.price.toLocaleString() %> VNĐ</p>
      </a>
    </div>
  <% }) %>
</div>
<%- include('partials/footer') %>

</body>
</html>
