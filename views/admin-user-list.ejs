<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Quản lý người dùng</title>
  <link rel="stylesheet" href="/css/style.css"> 
</head>
<body>
   <h1>Quản lý người dùng</h1>
  <div class="dashboard-stats">
  <div class="stat-box total">
    <h3><%= users.length %></h3>
    <p>Tổng người dùng</p>
  </div>
  <div class="stat-box active">
    <h3>1</h3>
    <p>Đang hoạt động</p>
  </div>
  
</div>

  <div class="admin-container">
   
    
    <% if (users.length === 0) { %>
      <p class="no-users">Không có người dùng nào.</p>
    <% } else { %>
      <table class="user-table">
        <thead>
          <tr>
            <th>Tên</th>
            <th>Email</th>
            <th>Mật khẩu</th>
            <th>Địa chỉ</th>
            <th>Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.password %></td>
              <td><%= user.address %></td>
              <td>
                <form method="POST" action="/admin/users/delete/<%= user.id %>" onsubmit="return confirm('Bạn có chắc muốn xóa người dùng này không?');">
                  <button type="submit" class="btn-delete">Xóa</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>

    <% } %>
<a href="/admin" class="btn-back"> Quay lại trang admin</a>
    
  </div>
</body>
</html>
