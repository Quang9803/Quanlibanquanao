<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Quản lý sản phẩm</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f7f9fb;
      margin: 0;
      padding: 0;
    }

    .admin-header {
      background-color: #ffffff;
      color: rgb(40, 148, 52);
      padding: 20px;
      text-align: center;
    }

    .admin-actions {
      margin-top: 10px;
    }

    .admin-actions a {
      background-color: #30a14e;
      color: white;
      padding: 8px 16px;
      margin: 4px;
      text-decoration: none;
      border-radius: 6px;
      transition: background 0.3s;
    }

    .admin-actions a:hover {
      background-color: #258040;
    }

    .admin-container {
      max-width: 1200px;
      margin: 30px auto;
      background: white;
      padding: 30px;
      box-shadow: 0 0 20px rgba(19, 126, 51, 0.1);
      border-radius: 12px;
    }

    h2 {
      margin-bottom: 20px;
      color: #199433;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 30px;
    }

    table th {
      background-color: #4caf50;
      color: rgb(25, 136, 49);
      padding: 10px;
    }

    table td {
      padding: 10px;
      border-bottom: 1px solid #ddd;
      vertical-align: middle;
    }

    img {
      border-radius: 8px;
      max-height: 80px;
    }

    .action-form {
      display: inline-block;
      margin: 4px;
    }

    .action-btn {
      padding: 6px 12px;
      font-size: 14px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: all 0.3s;
    }

    .action-btn.edit {
      background-color: #ffc107;
    }

    .action-btn.import {
      background-color: #17a2b8;
      color: white;
    }

    .action-btn.delete {
      background-color: #dc3545;
      color: white;
    }

    .action-btn:hover {
      opacity: 0.8;
    }

    .btn-add-product {
      display: block;
      text-align: center;
      padding: 12px;
      font-size: 16px;
      background-color: #4caf50;
      color: white;
      text-decoration: none;
      border-radius: 8px;
      width: 200px;
      margin: 0 auto;
      transition: background-color 0.3s;
    }

    .btn-add-product:hover {
      background-color: #3d8b40;
    }

  </style>
</head>
<body>
  <div class="admin-header">
    <h1>Chào quản trị viên <%= user.username %></h1>
    <div class="admin-actions">
      <a href="/admin/users">Quản lý người dùng</a>
      <a href="/admin/statistics">Xem thống kê</a>
      <a href="/logout">Đăng xuất</a>
    </div>
  </div>

  <div class="admin-container">
    <h2>Danh sách sản phẩm</h2>
    <table>
      <tr>
        <th>Hình ảnh</th>
        <th>Tên</th>
        <th>Giá</th>
        <th>Danh mục</th>
        <th>Mô tả</th>
        <th>Hành động</th>
      </tr>
      <% products.forEach(product => { %>
        <tr>
          <td>
            <% if (product.image) { %>
              <img src="<%= product.image %>">
            <% } else { %>
              Không có ảnh
            <% } %>
          </td>
          <td><%= product.name %></td>
          <td><%= product.price.toLocaleString() %> VNĐ</td>
          <td><%= product.category || 'Không rõ' %></td>
          <td><%= product.description %></td>
          <td>
            <form method="GET" action="/admin/products/edit/<%= product.id %>" class="action-form">
              <button type="submit" class="action-btn edit">Sửa</button>
            </form>

            <form method="GET" action="/admin/products/import/<%= product.id %>" class="action-form">
              <button type="submit" class="action-btn import">Nhập hàng</button>
            </form>

            <form method="POST" action="/admin/products/delete/<%= product.id %>" onsubmit="return confirm('Bạn có chắc muốn xóa?')" class="action-form">
              <button class="action-btn delete">Xóa</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>

    <a href="/admin/products/add" class="btn-add-product">➕ Thêm sản phẩm mới</a>
  </div>
</body>
</html>
